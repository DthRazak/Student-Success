@model SST.Application.Students.Queries.GetStudent.StudentVm;
@{
	Layout = "StudentLayout";
	ViewData["Title"] = "Info Page";
}

<div class="container emp-profile mrg-t-0">
	<hr />
	<center><h1>Info</h1></center>
	<hr />
	<br>
	<br>

	<div class="tr-bg">
		<br />
		<hr />
		<div class="row mrg-0">

			<div class="col-xl-2 col-lg-12 col-md-12 col-sm-12 col-12">
				<div class="profile-img">
					<img src="https://d1nhio0ox7pgb.cloudfront.net/_img/o_collection_png/green_dark_grey/512x512/plain/user.png" alt="" />
				</div>
			</div>
			<div class="col-xl-5 col-lg-6 col-md-12 col-sm-12 col-12 mrg-t-40">
				<div class="row mrg-0">
					<div class="col-xl-4 col-lg-4 col-md-4 col-sm-4 col-12">
						<label class="lab-st"><b>Full name</b></label>
					</div>
					<div class="col-xl-8 col-lg-8 col-md-8 col-sm-8 col-12 bg-w">
						<p class="p-st">@Model.FullName</p>
					</div>
				</div>
			</div>
			<div class="col-xl-5 col-lg-6 col-md-12 col-sm-12 col-12 mrg-t-40">
				<div class="row mrg-0">
					<div class="col-xl-3 col-lg-3 col-md-4 col-sm-4 col-12">
						<label class="lab-st"><b>E-mail</b></label>
					</div>
					<div class="col-xl-9 col-lg-9 col-md-8 col-sm-8 col-12 bg-w">
						<p class="p-st">@Model.Email</p>
					</div>
				</div>
			</div>
		</div>

		<hr class="hr-st"/>
		<br />
		<div class="row mrg-0">
			<div class="col-xl-2 col-lg-12 col-md-12 col-sm-12 col-12">
			</div>
			<div class="col-xl-5 col-lg-6 col-md-12 col-sm-12 col-12">
				<div class="row mrg-0">
					<div class="col-xl-4 col-lg-4 col-md-4 col-sm-4 col-12">
						<label class="lab-st"><b>Group</b></label>
					</div>
					<div class="col-xl-8 col-lg-8 col-md-8 col-sm-8 col-12 bg-w">
						<p class="p-st">@Model.Group</p>
					</div>
				</div>
			</div>
			<div class="col-xl-5 col-lg-6 col-md-12 col-sm-12 col-12">
			</div>
		</div>
		<br />
		<hr />
		<br />
	</div>
</div>

