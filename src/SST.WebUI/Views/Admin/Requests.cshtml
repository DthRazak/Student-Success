@model SST.Application.Requests.Queries.GetNotApprovedRequests.RequestsListVm;
@{
	ViewData["Title"] = "Requests Page";
}

<div class="container emp-profile">
	<div class="title">
		<h3>Requests</h3>
	</div>
	<div class="row">
		<div class="col-lg-11 col-md-11 ml-auto mr-auto">
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th class="text-center">#</th>
							<th>Full Name</th>
							<th>E-mail</th>
							<th>Creation Date</th>
							<th>Type</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						@for (int i = 0; i < Model.Requests.Count; ++i)
						{
							<tr>
								<td class="text-center">@(i+1)</td>
								<td>@Model.Requests[i].FullName</td>
								<td>@Model.Requests[i].UserRef</td>
								<td>@Model.Requests[i].CreationDate</td>
								<td>@Model.Requests[i].Type</td>
								<td class="td-actions">
									<input class="btn btn-success btn-just-icon btn-sm" type="button" id="request-accept-@Model.Requests[i].Id" value="ACCEPT" />
									<input class="btn btn-danger btn-just-icon btn-sm" type="button" id="request-reject-@Model.Requests[i].Id" value="REJECT" />
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>