@model SST.Application.Lectors.Queries.GetLectors.LectorsListVm;
@{
	ViewData["Title"] = "Lectors Page";
}

<div class="container emp-profile">
	<br>
	<center><h1>Lecturers</h1></center>
	<br>

	<div class="form-row">
		<div class="form-group col-md-6">
			<label for="inputCity">FirstName</label>
			<input type="text" class="form-control">
		</div>
		<div class="form-group col-md-6">
			<label for="inputCity">LastName</label>
			<input type="text" class="form-control">
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-md-12">
			<label for="inputAcademinStatus">Academic status</label>
			<input type="text" class="form-control" placeholder="">
		</div>
	</div>
	<input class="btn btn-success" type="button" value="ADD NEW" />
	<br>
	<br>
	<div class="row mrgn-20">
		<h4>Lectors</h4>
	</div>
	<div class="row">
		<div class="col-lg-11 col-md-11 ml-auto mr-auto">
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th class="text-center">#</th>
							<th>First name</th>
							<th>Last name</th>
							<th>Academic status</th>
							<th>E-mail</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody>
						@for (int i = 0; i < Model.Lectors.Count; ++i)
						{
							<tr>
								<td class="text-center">@(i + 1)</td>
								<td>@Model.Lectors[i].FirstName</td>
								<td>@Model.Lectors[i].LastName</td>
								<td>@Model.Lectors[i].AcademicStatus</td>
								<td>@Model.Lectors[i].Email</td>
								<td class="td-actions">
									<input class="btn btn-danger btn-just-icon btn-sm" type="button"
										   id="admin-remove-lector-@Model.Lectors[i].Id" value="REMOVE" />
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>