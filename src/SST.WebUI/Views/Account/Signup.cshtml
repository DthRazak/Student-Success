@model SST.WebUI.ViewModels.SignupModel

@{
	ViewData["Title"] = "Singup Page";
}


<div class="form-bg cover" style="min-height: 900px;">
	<h2 class="heading-style">Sign Up form</h2>
	<br />
	<div class="mrgn-20">
		<p class="registr-link">Sign Up as a:</p>

		<div class="form-check form-check-inline">
			<input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">
			<label class="form-check-label" for="inlineRadio1">Student</label>
		</div>
		<div class="form-check form-check-inline">
			<input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2">
			<label class="form-check-label" for="inlineRadio2">Lecturer</label>
		</div>
	</div>
	<br />
	<form asp-action="SignupAsStudent" asp-controller="Account" asp-anti-forgery="true" method="post">
		<div class="form-group mrgn-20">
			<label class="label-style">Input Email</label>
			<input type="email" name="Email" class="form-control" />
			<br />
		</div>
		<div class="form-group mrgn-20">
			<label class="label-style">Input Password</label>
			<input type="text" name="Password" class="form-control" />
			<br />
		</div>
		<div class="form-group mrgn-20">
			<label class="label-style">Confirm Password</label>
			<input type="text" name="ConfirmPassword" class="form-control" />
			<br />
		</div>

		<div class="selection-mrgn">
			<p class="label-style">Select Group</p>
			<select id="GroupSelect" name="Group">
				@foreach (var group in Model.GroupsList.Groups)
				{
					<option value="@group">@group</option>
				}
			</select>
		</div>
		<br />
		<div class="selection-mrgn">
			<p class="label-style">Select Student</p>
			<select id="fullNameSelect" name="StudentId">
				@foreach (var student in Model.StudentsList.Students)
				{
					<option value="@student.Id">@student.FullName</option>
				}
			</select>
		</div>
		<br />
		<input type="submit" value="SIGN UP" class="btn submit" />
		<br />
		<br />
	</form>

</div>